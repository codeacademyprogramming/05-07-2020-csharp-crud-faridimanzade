
@{
    ViewBag.Title = "Index";
}

@model List<ASP_SIMPLE_CRUD.Models.User>

<h2>Index</h2>

<table class="table table-striped table-dark">
    <thead class="table-light text-dark">
        <tr>
            <th scope="col">Row</th>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Age</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            var counter = 0;
            foreach (var item in Model)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>@item.id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Age</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "CRUD", new { id = item.id }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Edit", "Edit", "CRUD", new { id = item.id }, new { @class = "btn btn-warning" }) 
                        @Html.ActionLink("Delete", "Delete", new { controller = "CRUD", id = item.id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure to Delete?')" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h2>@Html.ActionLink("Create New User", "Create", "CRUD", new { @class = "btn btn-success" })</h2>